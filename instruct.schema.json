				{
					"type": "directVal",
					"value": {}
				}
			],
			"properties": {
				"type": {
					"const": "directVal"
				},
				"value": {
					"description": "The json to use as the value",
					"type": [
						"string",
						"number",
						"integer",
						"object",
						"array",
						"boolean",
						"null"
					]
				}
			},
			"required": [
				"type",
				"value"
			]
		},
		"variableAccess": {
			"$anchor": "VariableAccess",
